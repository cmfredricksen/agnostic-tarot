---
import "../styles/global.css"
import BaseHTML from "../layouts/BaseHTML.astro"
import type { MarkdownInstance } from "astro"
interface Frontmatter {
  title: string
  description?: string
  path?: string
  url?: string
  tags: [string]
}

const posts = Object.values(
  import.meta.glob<MarkdownInstance<Frontmatter>>("./posts/*.mdx", {
    eager: true,
  })
)
---

<BaseHTML title="Agnostic Tarot Blog">
  <div class="link-container">
    {
      posts.map((post) => (
        <div class="links">
          {/* <p class="lily">&#9884</p> */}
          <a href={post.frontmatter.path}>{post.frontmatter.title}</a>
          <p>{post.frontmatter.description}</p>
          <div class="tags">
            {post.frontmatter.tags.map((tag) => (
              <a href={`/tags/${tag}`}>
                <small>#{tag}</small>
              </a>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</BaseHTML>

<style>
  .link-container {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    justify-content: center;
    background-color: var(--clr-dark);

    a {
      color: var(--clr-accent);
    }
    a:hover {
      color: var(--clr-light);
    }
  }
  .links {
    border: 2px solid var(--clr-accent);
    display: flex;
    flex-direction: column;
    margin: 1rem;
    background-color: var(--clr-paleturq);
    /* border: 2px solid turquoise; */
    border-radius: 5px;
    padding: 1rem;
    width: 40%;
    /* flex-wrap: wrap; */
  }
  .tags small {
    margin-right: 1rem;
  }
  a {
    /* margin: 1rem 0; */
    /* padding: 1.5rem; */
  }

  @media screen and (max-width: 768px) {
    .links {
      width: 100%;
    }
  }
</style>
