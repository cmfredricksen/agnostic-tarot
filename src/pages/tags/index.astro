---
import BaseHTML from "../../layouts/BaseHTML.astro"

import { Image } from "astro:assets"
import theJuggler from "../../images/cbd_tarot/a01.jpg"
const allPosts = Object.values(
  import.meta.glob("../posts/*.mdx", { eager: true })
)
const tags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
]

const sortedTags = tags.sort()
---

<BaseHTML title="Tag Index">
  <section>
    <div class="tags">
      <h2>#Topics</h2>
      <div class="tag-box">
        {
          sortedTags.map((tag) => (
            <p>
              <a href={`/tags/${tag}`}>#{tag}</a>
            </p>
          ))
        }
      </div>
    </div>
  </section>
  <div class="card-container">
    <img
      src={theJuggler.src}
      alt="The Juggler: 1"
      title="The Juggler"
    />
    <div class="card-text">
      <h3>The Juggler</h3>
      <p class="bg-color">
        The Juggler brings their skills to the table, these include natural
        gifts and expertise. They know more than you would think and can be very
        cunning. They draw on their experiences and hard won knowledge to
        achieve their goals.
      </p>
    </div>
  </div>
</BaseHTML>
