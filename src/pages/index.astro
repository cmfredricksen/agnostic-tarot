---
import "../styles/global.css"
import { Image } from "astro:assets"
import BaseHTML from "../layouts/BaseHTML.astro"
import BookReading from "../components/BookReading.astro"

import temperance from "../images/cbd_tarot/a14.jpg"
import threeCoins from "../images/cbd_tarot/d03.jpg"
---

<BaseHTML title="Agnostic Tarot">
  <div class="hero">
    <div class="img-box">
      <Image
        src={temperance}
        alt="Temperance XIV by CBD Tarot"
        title="Temperance shows that time heals all wounds."
      />
      <Image
        src={threeCoins}
        alt="Three of Coins by CBD Tarot"
        title="Three of coins signifies work"
      />
    </div>
    <div class="contents">
      <h2>Start Here:</h2>
      <ul>
        <li><a href="/posts/introduction">Introduction</a></li>
        <li><a href="/posts/learning-the-cards">Learning the Cards</a></li>
        <li><a href="/posts/supplies">Tools of the Trade</a></li>
      </ul>
    </div>
  </div>
  <BookReading />
</BaseHTML>

<style>
  .hero {
    display: flex;
    align-items: flex-start;
    /* justify-content: space-between; */
    /* border: 1px solid purple; */
    background-color: #fff0f5;
    padding: 2rem;
    border-left: 1px solid paleturquoise;
    border-right: 1px solid paleturquoise;
  }
  .img-box {
    display: flex;
    justify-content: space-between;
    width: 50%;
    /* border: 1px solid orange; */
    /* padding: 2rem; */
  }
  .contents {
    /* text-align: left; */
    /* border: 1px solid blue; */
    padding: 0 3rem;
  }
  li {
    margin: 1rem 0;
    list-style: none;
    color: green;
  }
  li::before {
    content: "\269c"; /* Inserts a Unicode bullet character */
    color: blue;
    display: inline-block;
    width: 3em;
    font-weight: 600;
    margin-left: -3em; /* Adjusts positioning */
  }
</style>
