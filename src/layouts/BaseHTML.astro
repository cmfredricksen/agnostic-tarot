---
import "../styles/global.css"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta
      name="keywords"
      content="tarot, tarot de marseille, agnostic, cartomancy, beginner"
    />
    <meta
      name="description"
      content="Agnostic Tarot is a card reading method for beginners using the Tarot de Marseille."
    />
    <meta
      name="author"
      content="C.M. Fredricksen"
    />
    <link
      rel="css"
      href="../styles/global.css"
    />
    <link
      rel="icon"
      href="https://fav.farm/️🌈🌝️"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="main">
      <slot />
      <Footer />
    </div>
  </body>
</html>
