  {links.map((link) => <a href={link.path}>{link.title}</a>)}
</nav>

<style>
  nav {
    padding: 1rem;
  }
  nav a {
    color: darkblue;
    margin: 0 1rem;
    padding: 1rem 1.5rem;
    font-size: 1.5rem;
    background-color: paleturquoise;
  }
  nav a:hover {
    color: darkmagenta;
  }
</style>
